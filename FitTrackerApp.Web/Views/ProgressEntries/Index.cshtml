@model IEnumerable<FitTrackerApp.Domain.DomainModels.ProgressEntry>

@{
    ViewData["Title"] = "Progress Entries";
}

<h1>Progress Entries</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Entry</a>
    <a asp-action="ProgressSummary" class="btn btn-info ms-2">View Progress Summary</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Date)</th>
            <th>@Html.DisplayNameFor(model => model.WeightKg)</th>
            <th>@Html.DisplayNameFor(model => model.BodyFatPercentage)</th>          
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var entry in Model)
        {
            <tr>
                <td>@entry.Date.ToLocalTime().ToString("yyyy-MM-dd")</td>
                <td>@entry.WeightKg</td>
                <td>@entry.BodyFatPercentage</td>
                
                <td>
                    <a asp-action="Details" asp-route-id="@entry.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@entry.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@entry.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
